<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutMeActivity">

    <TextView
        android:id="@+id/accountInitial"
        android:layout_width="96sp"
        android:layout_height="96sp"
        android:layout_marginTop="64dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/black"
        android:gravity="center"
        android:text="P"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textUsername"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:text="USERNAME"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountInitial"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="EMAIL"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textUsername"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textBalance"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="BALANCE"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEmail"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/valueUsername"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="-"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textUsername"
        app:layout_constraintTop_toTopOf="@+id/textUsername"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/valueEmail"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="-"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textEmail"
        app:layout_constraintTop_toBottomOf="@+id/valueUsername"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/valueBalance"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="-"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textBalance"
        app:layout_constraintTop_toBottomOf="@+id/valueEmail"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/topUpInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Top Up Ammount"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBalance" />

    <Button
        android:id="@+id/topUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Top Up"
        app:layout_constraintStart_toEndOf="@+id/topUpInput"
        app:layout_constraintTop_toTopOf="@+id/topUpInput" />
</androidx.constraintlayout.widget.ConstraintLayout>
